# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=1d

# Database Configuration
MONGODB_URI=your_mongodb_connection_string

# Email Configuration (Example for Gmail)
